BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(int(input_number.text))
        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)
    BoxLayout:
        Label:
            font_size: 24
            text: 'Enter a number and press "Square"'